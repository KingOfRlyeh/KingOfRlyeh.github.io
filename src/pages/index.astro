---
import '../styles/global.css';

---

  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link href="https://fonts.googleapis.com/css2?family=IBM+Plex+Mono&display=swap" rel="stylesheet" />
    <link rel="icon" href="/myicon.png" type="image/png" />
    <title>JW Bollenbacher</title>
  </head>

  <body
    class="bg-[#f4e9dc] text-[#222] font-mono min-h-screen flex flex-col items-center justify-center text-center px-4"
    style="background: radial-gradient(circle, #f4e9dc 10%, #e8dcc7 90%)"
  >
    <h1
      class="text-5xl md:text-6xl tracking-widest drop-shadow-[0_0_6px_#ffb347]"
      style="font-family: 'IBM Plex Mono', monospace; text-shadow: 0 0 6px #ffb347, 0 0 12px #ffb34766;"
    >
      JW Bollenbacher
    </h1>

    <p class="mt-4 text-[#8b5e3c] opacity-85 text-lg max-w-xl italic">
      A personal archive of the things I create.
    </p>

    <nav class="mt-8 flex flex-wrap justify-center gap-6 text-sm text-[#444] relative">
      <a href="/projects" class="inline-block hover:text-[#e76f51] transition font-medium no-underline">
        Projects
      </a>
      <a href="/music" class="inline-block hover:text-[#e76f51] transition font-medium no-underline">
        Music
      </a>
      <a href="/cv" class="inline-block hover:text-[#e76f51] transition font-medium no-underline">
        CV
      </a>

      <div
        class="relative inline-block"
        x-data="{ hovered: false, locked: false, disabled: false, get open() { return (this.hovered || this.locked) && !this.disabled } }"
        x-on:mouseenter="if (disabled) { disabled = false; } hovered = true"
        x-on:mouseleave="hovered = false"
        x-on:keydown.escape.window="locked = false; disabled = false"
        x-on:click.away="locked = false; disabled = false"
      >
        <button
          type="button"
          class="inline-block hover:text-[#e76f51] transition focus:outline-none"
          x-on:click="
            if (!locked) { locked = true; }
            else { locked = false; disabled = true; hovered = false; }
          "
          x-bind:aria-expanded="open.toString()"
          aria-controls="links-dropdown"
          aria-haspopup="true"
        >
          Links·òÅ
        </button>
        <div
          id="links-dropdown"
          x-show="open"
          x-transition:enter="transition-all duration-300 ease-[cubic-bezier(.68,-0.55,.27,1.55)]"
          x-transition:enter-start="scale-y-75 opacity-0 pointer-events-none"
          x-transition:enter-end="scale-y-100 opacity-100 pointer-events-auto"
          x-transition:leave="transition-all duration-200 ease-in"
          x-transition:leave-start="scale-y-100 opacity-100 pointer-events-auto"
          x-transition:leave-end="scale-y-75 opacity-0 pointer-events-none"
          class="absolute left-0 mt-2 w-12 bg-white border border-[#e0c9a6] rounded shadow-lg origin-top z-50"
          style="will-change: transform, opacity;"
        >
          <div class="flex flex-col items-center py-1">
            <a
              href="https://github.com/KingOfRlyeh"
              target="_blank"
              rel="noopener"
              title="GitHub"
              class="my-1 hover:scale-110 transition"
            >
              <!-- GitHub SVG icon here -->
            </a>
            <a
              href="https://www.linkedin.com/in/jack-bollenbacher/"
              target="_blank"
              rel="noopener"
              title="LinkedIn"
              class="my-1 hover:scale-110 transition"
            >
              <!-- LinkedIn SVG icon here -->
            </a>
          </div>
        </div>
      </div>

      <a href="/updates" class="inline-block hover:text-[#e76f51] transition font-medium no-underline">
        Updates
      </a>
    </nav>

    <script src="https://cdn.jsdelivr.net/npm/alpinejs@3.x.x/dist/cdn.min.js" defer></script>
  </body>