---
import '../styles/global.css';
const posts = [
  {
    date: '2025-07-21',
    title: 'Welcome to the site!',
    body: `This is the very first update post. The website is finally live! Expect music, projects, reviews, and more soon. Explore, poke around, and enjoy.`
  },
  // Add more posts as needed
];
---

<main class="bg-[#f4e9dc] text-[#222] font-mono px-6 py-12 min-h-screen">
  <a href="/" class="absolute left-6 top-6 text-[#542437] bg-[#f4e9dc] border border-[#542437] rounded px-4 py-2 font-semibold shadow hover:bg-[#e0c9a6] transition z-10">Home</a>
  <h1 class="text-4xl md:text-5xl text-center font-bold text-[#542437] mb-12 tracking-tight">Site Updates</h1>
  <section class="max-w-2xl mx-auto flex flex-col gap-8">

    {posts.map(post => (
      <article class="bg-white border border-[#e0c9a6] rounded-xl shadow p-6 flex flex-col gap-2">
        <div class="flex items-center mb-1">
          <span class="text-sm text-[#e0c9a6] font-mono">{post.date}</span>
          <h2 class="text-xl font-bold text-[#542437] tracking-tight ml-6">{post.title}</h2>
        </div>
        <div class="text-[#444] leading-relaxed">
          {post.body}
        </div>
      </article>
    ))}

  </section>
</main>
